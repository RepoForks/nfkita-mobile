<LinearLayout
    android:id="@+id/card_feature"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?selectableItemBackground">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_additional_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relative_cover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/additional_cover_height">

                <ImageView
                    android:id="@+id/img_feature"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/additional_cover_height"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:src="@drawable/bg_border"
                    android:scaleType="centerCrop" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:background="#90000000"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/txt_tools_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="afawfwaf"
                android:layout_below="@id/relative_cover"
                android:paddingLeft="@dimen/additional_title_padding"
                android:paddingRight="@dimen/additional_title_padding"
                android:paddingTop="@dimen/additional_title_padding"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_category"
                android:layout_width="match_parent"
                android:text="#fiturtambahan"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_tools_name"
                android:paddingBottom="@dimen/additional_padding_bottom"
                android:paddingLeft="@dimen/additional_title_padding"
                android:paddingRight="@dimen/additional_title_padding"
                android:layout_marginBottom="@dimen/additional_title_padding"
                android:textSize="12sp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>